@model Portal.ViewModels.UserViewModel

@{
    ViewBag.Title = "Edit";
}

@{Layout = "~/Views/Shared/_LayoutAdmin.cshtml";}

<div class = "container">

    <h2 class = "panel-heading">Edycja Użytkownika</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class = "row">
            <div class = "col-md-8">
                <div class = "form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class = "form-group">
                        <div class = "col-md-offset-6">
                            @Html.Label("Adres E-mail:")
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class = "form-group">
                        <div class = "col-md-offset-6">
                            @Html.Label("Uprawnienia:")
                            @Html.DropDownListFor(model => model.SelectedRoleId, Model.RolesList, null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RolesList, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class = "form-group">
                        <div class = "col-md-offset-6">
                            <input type = "submit" value = "Zapisz" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Powrót do listy", "Index")
    </div>
</div>


@Scripts.Render("~/bundles/jqueryval")