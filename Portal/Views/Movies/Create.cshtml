@model Portal.ViewModels.MovieViewModel

@{
    ViewBag.Title = "Create";
}

@{Layout = "~/Views/Shared/_LayoutAdmin.cshtml";}

<div class = "container">

    <h2 class = "panel-heading">Dodaj Film</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class = "row">
            <div class = "col-md-8">

                <div class = "form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class = "form-group">
                        <div class = "col-md-offset-6">
                            @Html.Label("Tytuł:")
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Tytuł Filmu" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class = "form-group">
                        <div class = "col-md-offset-6">
                            @Html.Label("Opis Filmu:")
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows = 5, @cols = 220, @placeholder = "Opis Filmu" })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class = "form-group">
                        <div class = "col-md-offset-6">
                            <input type = "submit" value = "Dodaj" class = "btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Powrót do listy", "Index")
    </div>
</div>

@Scripts.Render("~/bundles/jqueryval")