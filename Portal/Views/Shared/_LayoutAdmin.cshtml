
@{
    ViewBag.Title = "_LayoutAdmin";
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/bootstrap-datetimepicker.css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
   
        <div class="row">
            <div class="col-md-3">

                <!--Sidebar-->

                <div class="nav-side-menu">
                    <div class="brand">
                        <a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-home"></span>
                         Home
                        </a>
                    </div>

                    <i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>

                    <div class="menu-list">

                        <ul id="menu-content" class="menu-content collapse out">
                           
                            <li data-toggle="collapse" data-target="#products" class="collapsed active">
                                <a href="#"><i class="fa fa-gift fa-lg"></i>Filmy<span class="glyphicon glyphicon-chevron-down down"></span></a>
                            </li>
                            <ul class="sub-menu collapse" id="products">
                                <li>
                                    <a href="@Url.Action("Index", "Movies")">
                                        <span class="glyphicon glyphicon-hand-right"></span>
                                        Wyświetl
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Create", "Movies")">
                                        <span class="glyphicon glyphicon-plus"></span>
                                        Dodaj
                                    </a>
                                </li>
                            </ul>


                            <li data-toggle="collapse" data-target="#service" class="collapsed">
                                <a href="#"><i class="fa fa-globe fa-lg"></i>Wpisy<span class="glyphicon glyphicon-chevron-down down2"></span></a>
                            </li>
                            <ul class="sub-menu collapse" id="service">
                                <li>
                                    <a href="@Url.Action("Index","News")">
                                        <span class="glyphicon glyphicon-hand-right"></span>
                                        Wyświetl
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Create","News")">
                                        <span class="glyphicon glyphicon-plus"></span>
                                        Dodaj
                                    </a>
                                </li>
                            </ul>

                            <li data-toggle="collapse" data-target="#shows" class="collapsed">
                                <a href="#"><i class="fa fa-globe fa-lg"></i>Seanse<span class="glyphicon glyphicon-chevron-down down3"></span></a>
                            </li>
                            <ul class="sub-menu collapse" id="shows">
                                <li>
                                    <a href="@Url.Action("Index","Shows")">
                                        <span class="glyphicon glyphicon-hand-right"></span>
                                        Wyświetl
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Create","Shows")">
                                        <span class="glyphicon glyphicon-plus"></span>
                                        Dodaj
                                    </a>
                                </li>
                            </ul>

                            <li data-toggle="collapse" data-target="#users" class="collapsed">
                                <a href="#"><i class="fa fa-globe fa-lg"></i>Użytkownicy<span class="glyphicon glyphicon-chevron-down down4"></span></a>
                            </li>
                            <ul class="sub-menu collapse" id="users">

                                <li>
                                    <a href="@Url.Action("Index","Users")">
                                        <span class="glyphicon glyphicon-hand-right"></span>
                                        Wyświetl
                                    </a>
                                </li>
                            </ul>

                        </ul>
                    </div>
                </div>
            </div>

            <!--End of Sidebar-->

            <!--Main content-->
            <div class="col-md-9">
                <div id="page-content-wrapper">
                    <div class="container body-content">
                        @RenderBody()

                    </div>
                </div
                <!-- /#page-content-wrapper -->
                <div class="container"><hr /></div>
                
            </div>
        </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>