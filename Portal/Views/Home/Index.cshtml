@model IEnumerable<Portal.ViewModels.NewsViewModel>

@{
    ViewBag.Title = "Home Page";
}

<style>

#siemka {
    margin: auto;
    width: 30%;
    height: 45%;
    position:center;
   
    
   
}

#myCarousel{

    border: 3px solid #808080;
    padding: 10px;
}

#post{

    border: 1px solid #808080;
    padding: 10px;
    border-radius: 25px;
}

#home_container{
     background-image:url(https://i.ytimg.com/vi/vvgBm1fN8pM/maxresdefault.jpg);
     background-size: 100%;
     background-repeat:no-repeat;
}

.side{
    display:inline-block;
}

</style>
<br/><br/><br/>
<div class="container" id="home_container"> 

    <div id="siemka">

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
                <li data-target="#myCarousel" data-slide-to="5"></li>
                <li data-target="#myCarousel" data-slide-to="6"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="http://www.coverwhiz.com/content/The-Fast-And-The-Furious.jpg" alt="MovieCover">
                </div>

                <div class="item">
                    <img src="http://www.coverwhiz.com/content/2-Fast-2-Furious.jpg" alt="MovieCover">
                </div>

                <div class="item">
                    <img src="http://www.coverwhiz.com/content/The-Fast-And-The-Furious-Tokyo-Drift.jpg" alt="MovieCover">
                </div>

                <div class="item">
                    <img src="http://www.coverwhiz.com/content/Fast-And-Furious.jpg" alt="MovieCover">
                </div>

                <div class="item">
                    <img src="http://www.coverwhiz.com/content/Fast-Five.jpg" alt="MovieCover">
                </div>

                <div class="item">
                    <img src="http://www.coverwhiz.com/content/Fast-And-Furious-6.jpg" alt="MovieCover">
                </div>

                <div class="item">
                    <img src="http://www.coverwhiz.com/content/Fast-And-Furious-7.jpg" alt="MovieCover">
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <p> <a style="width:100%" href="@Url.Action("Index", "Tickets")" class="btn btn-primary btn-lg">Zarezerwuj Bilet &raquo;</a></p>
    </div>
    
    <br /><br /><br /><br /><br />
    
   <div class="row">

       <h2>News</h2>
                @foreach (var item in Model)
            {
                    <div id="post">
                       
                        <h3 class="side">
                            @Html.DisplayFor(modelItem => item.Title)
                        </h3>
                         <p class="side" style="float:right">
                            <span class="glyphicon glyphicon-time"></span>
                            Added: @Html.DisplayFor(modelItem => item.AddedDateTime)
                        </p>
                       <hr />
                        <p>@Html.DisplayFor(modelItem => item.Description)</p>
                    </div>
                    <br />
                }
    </div>

</div>



